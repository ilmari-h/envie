{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --format=esm --outdir=dist --sourcemap --platform=node && tsc --emitDeclarationOnly --outDir dist --noEmitOnError false",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@types/node": "^24.7.1",
    "drizzle-orm": "0.43.1",
    "nanoid": "^5.1.5",
    "postgres": "3.4.5"
  },
  "resolutions": {
    "@types/minimatch": "5.1.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "drizzle-kit": "0.31.1",
    "esbuild": "^0.24.0",
    "typescript": "5.8.2"
  }
}
