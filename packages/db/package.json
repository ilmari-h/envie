{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run src/migrate.ts",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "nanoid": "^5.1.5",
    "postgres": "3.4.5"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "drizzle-kit": "0.31.1",
    "tsup": "^8.4.0",
    "typescript": "5.8.2"
  }
}
