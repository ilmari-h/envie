{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "JWT_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GITHUB_CALLBACK_URL",
    "API_URL",
    "NEXT_PUBLIC_API_URL",
    "FRONTEND_URL",
    "REDIS_CONNECTION_STRING",
    "SKIP_ENV_VALIDATION",
	"STRIPE_SECRET_KEY",
	"STRIPE_TEAM_PRICE_ID",
	"APP_URL",
	"APP_DOMAIN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
